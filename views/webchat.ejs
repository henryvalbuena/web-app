    <div class="ui segments">
        <div class="ui grid">
                <div id="chat-showHide" class="ui eleven wide column">
                    <div class="ui top attached inverted segment">
                        <h2 class="ui inverted center aligned header">
                            <div class="content">
                                <i class="chat icon"></i>Chat
                            </div>
                        </h2>
                    </div>
                    <span class="notifications"></span>
                    <div class="chat-content">
                    <ul id="messages"></ul>
                    </div>
                </div>
                <div class="ui five wide column">
                    <div class="ui top attached inverted segment">
                        <h2 class="ui inverted center aligned header">
                            <div class="content">
                            <i class="users icon"></i>Online Users
                            </div>
                        </h2>
                    </div>
                    <div class="chat-content">
                    <ul id="users"></ul>
                    </div>
                </div>
        </div>
    </div> 
    <div class="ui bottom inverted attached segment">
        <form class="ui form" id="chat-form">
                <label for="select-image"><i class="attach icon"></i> Attach Image</label>
                <input type="file" id="select-image">
            <div class="ui fluid action input">
                <input id="m" type="text" placeholder="Message" autocomplete="off">
                <button class="ui blue button">Send</button>
                <span class="show-users"><i class="users icon"></i></span>
            </div>
        </form>
    </div>
</div>

<div class="ui basic modal nickname">
    <div class="content ui fluid input">
        <div class="actions">
            <form class="ui form" action="" onsubmit="return false;">
                <input type="text" autocomplete="off" id="chat-name" placeholder="Name">
                <button id="chat-name-add" class="ui blue button approve close" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>

<div class="ui basic fullscreen modal show-image">
  <i class="close icon"></i>
  <div class="image content">
